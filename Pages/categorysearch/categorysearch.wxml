<!--Pages/categorysearch/categorysearch.wxml-->

<view class='header_tab'>
  <text id="tag_poet" class="{{isAuthor ? 'author_didSelected' : 'normal'}}" bindtap='tagTap'>作者</text>
  <text id="tag_dynasty" class="{{isDynasty ? 'dynasty_didSelected' : 'normal'}}" bindtap='tagTap'>朝代</text>
  <text id="tag" class="{{isTag ? 'tag_didSelected' : 'normal'}}" bindtap='tagTap'>标签</text>
  <text id="tag_poems" class="{{isPoetry ? 'poetry_didSelected' : 'normal'}}" bindtap='tagTap'>诗集</text>
  <icon class="searchcion" size='20' type='search'></icon> 
</view>

<block wx:if="{{isAuthor}}">
<view class='flex_box'>
  <scroll-view class="flex-wrap" scroll-y scroll-with-animation scroll-into-view='{{sectionId}}'>
    <view wx:for="{{search_conditions.author}}" wx:key="item.title" id="{{item.title}}">
      <view class="section_title">{{item.title}}</view>
      <view wx:for="{{item.list}}" wx:for-item="info" wx:key="info.poet_id" class="item_info" data-id="{{info.poet_id}}" bindtap='onItemSelected'>
        <view class="author_name">{{info.poet_name}}</view>
        <view class="poetyr_count">{{info.poetry_count}}首</view>
      </view>
    </view>
  </scroll-view>
  <view class="flex-right">
        <view class="zimulist" bindtouchmove="touchmovefn" bindtouchstart="touchstartfn">
            <view class="zimu" wx:for="{{search_conditions.author}}" wx:key="ABC" data-id="{{item.title}}" bindtap='zimuTap'>{{item.title}}</view>
        </view>
    </view>
</view>
</block>

