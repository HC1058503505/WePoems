<!--Pages/categorydetail/categorydetail.wxml-->
<view wx:for="{{poemlist.poem_list}}" data-index="poetry_{{item.id}}.json" wx:key="{{item.id}}" bindtap='onItemSelected'>
  <view class='poem_cell'>
    <view class='poem_top'>
      <text class='poem_title'>{{item.name}}</text>
      <text class='poem_dynasy_author'>{{item.author_info}}</text>
    </view>
    <view class='poem_bottom'>
      <text class='poem_abstract'>{{item.first_row}}</text>
    </view>
  </view>
</view>

<view class="bottom_line" hidden="{{hide_bottom_line}}">---------我是底线---------</view>
