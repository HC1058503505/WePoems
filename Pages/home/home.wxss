/* Pages/home/home.wxss */

.poemlist{
  display: flex;
  flex-direction: column;
}

.poem {
  display: flex;
  flex-direction: column;
  margin: 15rpx;
  background-color: #fff;
  border-radius: 10rpx;
  /*align-items: center;*/
  padding: 15rpx;
  border-style: inset;
}

.poem_title {
  text-align: center;
}

.poem_author {
  text-align: center;
  color: #CFCFCF;
  font-size: medium;
}

.poem_content {
  text-align: center;
}

.poem_tags {
  margin-top: 10rpx;
  color: #CFCFCF;
  font-size: small;
  
}