.extension {
   display: flex;
   flex-direction: column;
   margin: 50rpx;
   margin-top: 140rpx;
   padding-bottom: 40rpx;
}

text {
  font-size: large;
  line-height: 60rpx;
}



.extension_title {
  font-weight: 600;
  font-size: x-large;
  border-bottom: 2rpx dashed rgb(228, 227, 227);
  padding-bottom: 10rpx;
}

.extension_subs {
  display: flex;
  flex-direction: column;
}

.extension_subs_title {
  font-size: large;
  border-bottom: 2rpx dashed rgb(228, 227, 227);
  padding-bottom: 10rpx;
}

.extension_sub_content {
  font-size: 30rpx;
}

scroll-view{
  height: calc(100vh - 46px);
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}